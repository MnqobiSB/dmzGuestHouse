<!-- car main images slider container -->
<div class="car__img-slider mb-medium">
  <!-- Full-width images with number text -->
  <% if (package.images[0]) { %> 
  <div class="mySlides">
    <div class="numbertext"><%= package.images.indexOf(package.images[0]) + 1 %> / <%= package.images.length %></div>
    <img 
      src="<%= package.images[0].url %>"
      class="car__img mb-small img-thumbnail"
      alt="<%= package.title %>"
      title="<%= package.title %>'s image"
      loading="eager"
      width="1200"
      height="800"
    />
  </div>
  <% } %> 

  <% if (package.images[1]) { %> 
    <div class="mySlides">
      <div class="numbertext"><%= package.images.indexOf(package.images[1]) + 1 %> / <%= package.images.length %></div>
      <img 
        src="<%= package.images[1].url %>"
        class="car__img mb-small img-thumbnail"
        alt="<%= package.title %>"
        title="<%= package.title %>'s image"
        loading="eager"
        width="1200"
        height="800"
      />
    </div>
  <% } %> 

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>

  <!-- Thumbnail images -->
  <div class="row">
    <div class="col-12">

      <% if (package.images[0]) { %> 
        <div class="column">
          <img 
            src="<%= package.images[0].url %>" 
            class="demo cursor car__img car__img--small img-thumbnail" 
            alt="Post small image: <%= package.images[0]._id %>"
            title="<%= package.images[0]._id %>"
            loading="eager"
            onclick="currentSlide(1)" 
            tabindex="0"
            width="84"
            height="56"
          />
        </div>
      <% } %>
      
      <% if (package.images[1]) { %> 
        <div class="column">
          <img 
            src="<%= package.images[1].url %>" 
            class="demo cursor car__img car__img--small img-thumbnail" 
            alt="Post small image: <%= package.images[1]._id %>"
            title="<%= package.images[1]._id %>"
            loading="eager"
            onclick="currentSlide(2)" 
            tabindex="0"
            width="84"
            height="56"
          />
        </div>
      <% } %>
    </div>
  </div>
</div>
<!-- car main images slider container -->