<% layout('layouts/boilerplate') -%>
<!-- page breadcrumb -->
<nav aria-label="breadcrumb" class="breadcrumb__nav">
	<div class="container">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a a class="breadcrumb__link" href="/">Home</a></li>
			<li class="breadcrumb-item"><a a class="breadcrumb__link" href="/packages">Packages</a></li>
			<li class="breadcrumb-item" aria-current="page"><span class="breadcrumb__active"><%= package.title %></span></li>
		</ol>
	</div>
</nav>
<!-- page breadcrumb -->

<div class="page-wrapper">
	<div class="container">
		<!-- MAIN SECTION START -->
		<main
			id="main"
			class="main"
			tabindex="-1"
			role="main"
		>
			<!-- page header component -->
			<header class="page-header">
				<div class="page-header__text-box">
					<h1 class="display-4 page-header__heading"><%= package.title %></h1>
				</div>
			</header>
			<!-- page header component -->

			<div class="row">
				<div class="col-md-8">
					<section id="article" class="article p-0">
						<!-- post article -->
						<article class="blog-post">
							<!-- post header -->
							<header class="blog-post__header mb-small">
								<h2 class="car__h2 mb-xsmall">R<%= package.price %><small class="text-muted">/night</small></h2>
								<p class="text-danger">Get 20% Discount for Online Bookings</p>
							</header>
							<!-- post header -->

							<!-- car main images slider container -->
								<% include ../partials/packages/packageImageSlider %>
							<!-- car main images slider container -->

							<!-- post article -->
							<div class="blog-post__body mb-medium">
								<%- package.body %>
							</div>
							<!-- post article -->

							<hr class="header__hr">

							<!-- post article -->
							<footer class="blog-post__footer p-0 mb-small">
								
								<!-- delete/edit post if author -->
								<% if (currentUser) { %>
									<h3 class="mb-small">Manage Package:</h3>

									<div class="row justify-content-between mb-4">
										<div class="col-6">
											<a class="float-right" href="/packages/<%= package.id %>/edit">
												<button class="btn btn__secondary">Edit Package</button>
											</a>
										</div><!-- /.col-6 -->

										<div class="col-6">
											<form 
												class="form-inline"
												action="/packages/<%= package.id %>?_method=DELETE"
												method="POST"
											>
												<div class="form-group">
													<button type="submit" class="btn btn__red">
														Delete Package
													</button>
												</div>
											</form>
										</div><!-- /.col-6 -->
									</div><!-- /.row -->
								<% } %>
								<!-- delete/edit post if author -->
								
								<!-- back button -->
								<form>
									<input 
										class="btn btn__tertiary"
										type="button" 
										value="&laquo; Go back" 
										onclick="history.back()"
									/>
								</form>
								<!-- back button -->
							</footer>
							<!-- post article -->
						</article>
						<!-- post article -->
					</section>
				</div><!-- /.col-md-8 -->
				<div class="col-md-4">
					<aside id="aside-post">
						<h3 class="mb-small">See Availability</h3>
						<% if (package.bookDate1) { %>
							<h4 class="color-secondary">Room Booked From:</h4>
							<p class="blog-post__meta">
								<span class="blog-post__date">
									<svg class="blog__icon" focusable="false" role="img" aria-label="Placeholder: calendars">
										<use xlink:href="/images/symbol-defs.svg#icon-calendar"></use>
									</svg> 
									<span class="text-danger"><%= package.bookDate1.toLocaleDateString("en-US", { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
								</span>
								-To- 
								<span class="blog-post__date">
									<svg class="blog__icon" focusable="false" role="img" aria-label="Placeholder: calendars">
										<use xlink:href="/images/symbol-defs.svg#icon-calendar"></use>
									</svg> 
									<span class="text-danger"><%= package.checkoutDate1.toLocaleDateString("en-US", { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
								</span>
							</p>
						<% } %>

						<% if (package.bookDate2) { %>
							<hr class="">
							<h4 class="color-secondary">Room Booked From:</h4>
							<p class="blog-post__meta">
								<span class="blog-post__date">
									<svg class="blog__icon" focusable="false" role="img" aria-label="Placeholder: calendars">
										<use xlink:href="/images/symbol-defs.svg#icon-calendar"></use>
									</svg> 
									<span class="text-danger"><%= package.bookDate2.toLocaleDateString("en-US", { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
								</span>
								-To- 
								<span class="blog-post__date">
									<svg class="blog__icon" focusable="false" role="img" aria-label="Placeholder: calendars">
										<use xlink:href="/images/symbol-defs.svg#icon-calendar"></use>
									</svg> 
									<span class="text-danger"><%= package.checkoutDate2.toLocaleDateString("en-US", { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
								</span>
							</p>
						<% } %>
					</aside>
				</div><!-- /.col-md-4 -->
			</div><!-- /.row -->
		</main><!-- MAIN SECTION END -->
	</div><!-- /.container -->
</div><!-- /.page-wrapper -->



