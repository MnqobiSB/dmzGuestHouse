<% layout('layouts/boilerplate') -%>
<!-- page breadcrumb -->
<nav aria-label="breadcrumb" class="breadcrumb__nav">
	<div class="container">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a a class="breadcrumb__link" href="/">Home</a></li>
			<li class="breadcrumb-item" aria-current="page"><span class="breadcrumb__active">Packages</span></li>
		</ol>
	</div>
</nav>
<!-- page breadcrumb -->

<div class="page-wrapper">
	<div class="container">
		<!-- MAIN SECTION START -->
		<main
			id="main"
			class="main"
			tabindex="-1"
			role="main"
		>
			<!-- page header component -->
			<header class="page-header">
				<div class="page-header__text-box">
					<h1 class="display-4 page-header__heading">All Packages</h1>
				</div>
			</header>
			<!-- page header component -->
					<section id="blog" class="blog">
						<div class="card-deck row">
							<% packages.forEach(function(package){ %>
								<div class="col-md-4 news-blog">
									<div class="card">
										<img 
											src="<%= package.images[0].url %>" 
											class="card-img rounded-0 news-blog__img" 
											alt="<%= package.title %>"
											title="<%= package.title %>'s image"
											loading="lazy"
											width="800"
											height="250"
										>
										<div class="card-body text-center">
											<h3 class="news-blog__title"><%= package.title %></h3> <!-- must be h3 -->
											<p class="card-text"><span class="text-bold">R<%= package.price %></span><small class="text-muted">/night</small></p>
											<p><small class="text-danger">Get 20% Discount for Online Bookings</small></p>
											<a class="btn btn__secondary" href="/packages/<%= package.slug %>" role="button">View Room &raquo;</a>
										</div>
									</div><!-- /.card-->
								</div><!-- /.col-md-4 -->
							<% }); %><!-- ejs forEach -->
						</div><!-- /.card-deck row -->
					</section>
				</div><!-- /.col-md-8 -->
		</main><!-- MAIN SECTION END -->
	</div><!-- /.container -->
</div><!-- /.page-wrapper -->
